<%= f.input :name %>
<%= f.input :title %>
<%= f.input :kinship_type, collection: Relative.kinship_type_mapping %>
<%= f.input :kinship_name %>
<% if f.object.organizations.present? %>
  <% f.object.organizations.each do |organization| %>
    <%= f.simple_fields_for :organizations, organization do |o| %>
      <%= organization.name %>
      <%= o.input :mismatch, label: '配對錯誤' %>
    <% end %>
  <% end %>
<% end %>

<div class="form-actions">
  <%= f.button :submit %>
</div>
